# create user
	useradd -m <user>
	passwd <user>
	usermod -aG video,audio,storage,wheel <user>

# make wheel members execute any command with sudo
	sudo EDITOR=vim visudo
	# uncomment the according line

# change to my layout
	# change X11 Keyboard Layout
	cd /usr/share/X11/xkb/symbols
	sudo vim us
	# add the following lines to the first us layout
    	key <CAPS> {        [ BackSpace,    BackSpace       ]       };
    	key <BKSP> {        [ Caps_Lock,    Caps_Lock       ]       };
	# change Linux console Keyboard Layout
	cd /usr/share/kbd/keymaps/i386/qwerty
	sudo cp us.map.gz ../..
	cd ../..
	sudo mv us.map.gz personal.map.gz
	sudo vim personal.map.gz
	# swap Delete with Caps_Lock and afterwards create this file:
	sudo vim /etc/vconsole.conf
	# add the following line
	KEYMAP=personal
	# change x11 layout to us
	localectl set-x11-keymap us

# add a compose key
under the first option add the following line:
Option	"XkbOptions" "compose:rctrl"

# change git default editor to nvim
git config --global core.editor nvim

# install the following packages
	sudo pacman -S xorg-server xorg-xinit xorg-xrandr xorg-xsetroot xorg-xprop awesome vifm firefox picom man-db linux-lts neofetch figlet cmatrix python zsh xclip git htop wget zsh-syntax-highlighting alsa-utils discord playerctl fuse2


